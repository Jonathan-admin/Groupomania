<!doctype html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" type="text/css" href="{{ asset('scss/styles.css') }}">

        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" defer></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" defer></script>

        <link rel="shortcut icon" type="image/png" href="{{ asset('images/favicon.png') }}">
        <title>Groupomania - Inscription au réseau social entreprise</title>
    </head>
    <body>
        <main class="signin row form-style">
            <div class="col-10 col-sm-6 col-md-6 col-lg-4">
                <header class="signin__logo">
                    <img src="{{ asset('images/icon-left-font-white.png') }}">
                </header>
                <section class="signin__form" id="app">
                    <h1>Inscription au réseau social</h1>
                    {{ form_start(form) }}
                    {{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr':{'placeholder':'Votre nom d\'utilisateur...'}}) }} 
                    {{ form_row(form.email, {'label': 'Adresse email', 'attr':{'placeholder':'Votre adresse email...'}}) }}
                    {{ form_row(form.password, {'label': 'Mot de passe', 'attr':{'placeholder':'Votre mot de passe...'}}) }}
                    {{ form_row(form.confirm_password, {'label': 'Confirmation du mot de passe', 'attr':{'placeholder':'Veuillez resaisir votre mot de passe...'}}) }}
                    <div class="form-style__buttons buttons--left">
                        <button type="submit" class="btn btn--valid">S'inscrire</button>
                        <a href="{{ path('security_login') }}" type="button" class="btn btn--cancel">Retour</a>
                    </div>
                    {{ form_end(form) }}
                </section> 
            </div>
        </main> 
    </body>
</html>