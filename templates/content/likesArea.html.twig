{% if app.user.username == contentUser %}
    <i class="fas fa-thumbs-up disabled">  {{ nbDislikesLikes.nbLikes }}</i> 
    <i class="fas fa-thumbs-down disabled"> {{ nbDislikesLikes.nbDislikes }}</i> 
 {% elseif IsLikeAction == "isLiked" %}
    <i class="fas fa-thumbs-up cursor" tabindex="0" aria-label="Annuler mon like" data-role=0 data-url="{{ path('content_like',{'id':id}) }}"> {{ nbDislikesLikes.nbLikes }}</i> 
    <i class="fas fa-thumbs-down disabled"> {{ nbDislikesLikes.nbDislikes }}</i> 
{% elseif IsLikeAction == "isDisliked" %}
    <i class="fas fa-thumbs-up disabled"> {{ nbDislikesLikes.nbLikes }}</i> 
    <i class="fas fa-thumbs-down cursor" tabindex="0" data-role=0 aria-label="Annuler mon like" data-url="{{ path('content_like',{'id':id}) }}"> {{ nbDislikesLikes.nbDislikes }}</i> 
{% else %} 
    <i class="far fa-thumbs-up cursor"tabindex="0" aria-label="J'aime ce contenu" data-role=1 data-url="{{ path('content_like',{'id':id}) }}"> {{ nbDislikesLikes.nbLikes }}</i> 
    <i class="far fa-thumbs-down cursor" tabindex="0" aria-label="Je n'aime pas ce contenu" data-role=-1 data-url="{{ path('content_like',{'id':id}) }}"> {{ nbDislikesLikes.nbDislikes }}</i> 
{% endif %}

